
user  www-data www-data;
worker_processes  1;
pid /var/run/nginx.pid;

events {
    worker_connections  1024;
}


http {
    ### Hide signature
	
    server_tokens off;  
    error_page 404 /errors/404.html;
    
    ### Passenger configuration 

    passenger_root /usr/local/rvm/gems/<%= ruby_version %>/gems/passenger-<%= passenger_version %> ;
    passenger_ruby /usr/local/rvm/wrappers/<%= ruby_version %>/ruby;

    include       mime.types;
    default_type  application/octet-stream;
    
    # Logging Settings
    access_log <% logdir %>/access.log;
    error_log  <% logdir %>/error.log;


    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';


    sendfile        on;

    # If no new request are are received during 3 seconds the connection is killed.
    keepalive_timeout  3;

    # Enable compression 
    gzip  on;
    gzip_comp_level 2;
    gzip_proxied any;
    gzip_types   text/plain text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript;
	
    ##
    #  Virtual Hosts 
    ##
    include <%= installdir %>/conf/sites-enabled/*;
}
